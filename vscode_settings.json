{
  "files.trimTrailingWhitespace": true,
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "window.titleBarStyle": "custom",
  "C_Cpp.updateChannel": "Insiders",
  "rewrap.wholeComment": false,
  "editor.fontSize": 14.5,
  "editor.rulers": [
    100
  ],
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "editor.background": "#282828"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "comment": "#2AA198",
    },
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "punctuation.definition.comment.cpp",
          "punctuation.definition.comment.c",
          "punctuation.definition.comment.begin.c",
          "punctuation.definition.comment.end.c",
          "punctuation.definition.comment.python",
          "comment.line.double-slash.cpp",
          "comment.line.double-slash.c",
          "comment.line.number-sign.python",
          "comment.block.c",
        ],
        "settings": {
          "foreground": "#2AA198"
        }
      }
    ]
  },
  //
  // Gitlens
  //
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  //
  // Ruby
  //
  "ruby.useBundler": true, // use the internal language server (see below)
  "ruby.useLanguageServer": true,
  "ruby.format": "rubocop", // use rubocop for formatting
  "ruby.lint": {
    "rubocop": {
      "useBundler": true // enable rubocop via bundler
    }
  },
  //
  // Python
  //
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
    },
  },
  //
  // TOML
  //
  "[toml]": {
    "editor.formatOnSave": false
  },
  //
  // Markdown
  //
  // Disable Prettier for Markdown until
  //    - https://github.com/prettier/prettier/issues/5299
  //    - https://github.com/prettier/prettier/issues/5019
  // are fixed.
  "[markdown]": {
    "editor.defaultFormatter": "vscode.markdown-language-features"
  }
}
